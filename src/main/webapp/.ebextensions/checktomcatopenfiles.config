files:
  "/home/ec2-user/checkTomcatForOpenFiles" :
    mode: 000777
    owner: ec2-user
    group: ec2-user
    source: https://s3.amazonaws.com/beanstalk-config-files/checkTomcatOpenFiles.sh
    
    
commands:
  01-setupcron:
    command: echo "*/10 * * * * root /home/ec2-user/checkTomcatOpenFiles.sh >> /var/log/cron" > /etc/cron.d/checkTomcatOpenFiles
  02-changeperm:
    command: chmod 644 /etc/cron.d/checkTomcatOpenFiles