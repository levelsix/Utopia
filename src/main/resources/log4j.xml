<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d | %-5p | %X{playerId}%X{udid} | %X{ip} | %t | %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="R" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${lvl6.server.log.location}" />
		<param name="MaxFileSize" value="25MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern" value="%d | %-5p | %X{playerId}%X{udid} | %X{ip} | %t | %c{1} - %m%n" />
		</layout>
	</appender>


	<logger name="com.mchange.v2.c3p0">
		<level value="info" />
	</logger>


	<logger name="com.springframework">
		<level value="info" />
	</logger>	

	<category name="com.mchange" additivity="true">
		<priority value="info" />
		<appender-ref ref="console" />
		<appender-ref ref="R" />
	</category>




	<root>
		<priority value="debug" />
		<appender-ref ref="console" />
		<appender-ref ref="${lvl6.server.log.appender}" />
	</root>

</log4j:configuration>