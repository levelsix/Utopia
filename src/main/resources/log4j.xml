 	<appender name="cassandra" class="com.lvl6.cassandra.log4j.Log4jAppender">
		<param name="hosts" value="${lvl6.cassandra.hosts}" />
		<param name="keyspace" value="${lvl6.cassandra.keyspace}" />
		<param name="columnFamily" value="${lvl6.cassandra.column.family}" />
		<param name="clusterName" value="${lvl6.cassandra.cluster.name}" />
		<param name="replicationFactor" value="${lvl6.cassandra.replication.factor}" />
		<param name="Threshold" value="INFO" />
	</appender>
	
	<appender name="EC2" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="/opt/tomcat7/logs/tail_catalina.log" />
		<param name="MaxFileSize" value="25MB" />
		<param name="MaxBackupIndex" value="100" />
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern"
				value="%d | %-5p | %X{playerId}%X{udid} | %X{ip} | %t | %c{1} - %m%n" />
		</layout>
	</appender>
	

	<appender name="R" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${lvl6.server.log.location}.log" />
		<param name="MaxFileSize" value="25MB" />
		<param name="MaxBackupIndex" value="100" />
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern"
				value="%d | %-5p | %X{playerId}%X{udid} | %X{ip} | %t | %c{1} - %m%n" />
		</layout>
	</appender>

	<appender name="ERROR_LOG" class="org.apache.log4j.RollingFileAppender">
		<param name="file" value="${lvl6.server.log.location}_errors.log" />
		<param name="MaxFileSize" value="25MB" />
		<param name="MaxBackupIndex" value="300" />
		<param name="Threshold" value="ERROR" />
		<layout class="org.apache.log4j.EnhancedPatternLayout">
			<param name="ConversionPattern"
				value="%d | %-5p | %X{playerId}%X{udid} | %X{ip} | %t | %c{1} - %m%n" />
		</layout>
	</appender>

	
