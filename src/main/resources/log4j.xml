	<root>
		<level value="info" />
		<appender-ref ref="EC2" /> 
		<appender-ref ref="cassandra" /> 
		<appender-ref ref="${lvl6.server.log.appender}" />
		<appender-ref ref="ERROR_LOG" />
	</root>

